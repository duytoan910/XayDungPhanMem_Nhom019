<form id="formAddDisk">
    <div class="form-group">
        <label>Tựa đĩa:</label>
        <div class="kt-kendo-control-fix" style="display: block !important;">
            <input id="tbx_Create_DiskTitle" style="width:300px !important">
        </div>
    </div>
    <div class="form-group">
        <label>Số lượng:</label>
        <div class="kt-kendo-control-fix" style="display: block !important;">
            <input id="tbx_Create_DiskQuantity" type="number" class="" required style="height:30px;width:100px">
        </div>
    </div>
    <div class="form-group" style="bottom: 0;position: fixed;right: 15px;">
        <button class="btn btn-success btnSaveOrUpdate" style="margin: 5px 0px;">
            <i class="fa fa-save"></i> Lưu
        </button>
        <button class="btn btn-default btnResetFeild" style="margin: 5px 10px;">
            Reset
        </button>
    </div>
</form>
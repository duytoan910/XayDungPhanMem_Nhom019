                    <!--Các chức năng quản lý-->
                    <li class="nav-item has-treeview permission forAD">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-user-tie" style="width:20px;"></i>
                            <p>
                                Quản Lý Nhân Viên<i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/QuanLyNhanVien" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Danh Sách Nhân Viên</p>

                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link btn_Menu_AddEmployee ">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Thêm Mới Nhân Viên</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-home"></i>
                            <p>
                                Quản Lý Bất Động Sản<i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/QuanLyBatDongSan" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Danh Sách Bất Động Sản</p>
                                </a>
                            </li>
                            <li class="nav-item perform permission forNV">
                                <a href="#" class="nav-link btn_Menu_AddBDS">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Thêm Mới Bất Động Sản</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/ThongKeBatDongSan" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
